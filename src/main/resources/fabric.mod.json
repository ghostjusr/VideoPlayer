{
	"schemaVersion": 1,
	"id": "videoplayer",
	"version": "${version}",
	"name": "VideoPlayer",
	"description": "A mod that allows playing videos by constantly setting text displays with command blocks.",
	"authors": [
		"ghostjusr"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "CC0-1.0",
	"icon": "assets/videoplayer/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"github.ghostjusr.videoplayer.VideoPlayer"
		],
		"client": [
			"github.ghostjusr.videoplayer.VideoPlayerClient"
		]
	},
	"mixins": [
		"videoplayer.mixins.json",
		{
			"config": "videoplayer.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.16.14",
		"minecraft": "~1.21.7",
		"java": ">=21",
		"fabric-api": "*",
		"cbset": ">=1.21.7"
	},
	"suggests": {
		"another-mod": "*"
	}
}